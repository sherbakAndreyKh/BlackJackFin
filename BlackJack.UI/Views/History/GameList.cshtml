@model BlackJack.ViewModels.GameListHistoryView

@{
    ViewBag.Title = "GameList";
}

<h3>All Games "@Model.Player.Name"</h3>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Game Number</th>
            <th>Amount Round</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Number</td>
                <td>@game.RoundsAmount</td>
                <td><a href="@Url.Action("RoundsList","History", new { id = game.Id, playerId = Model.Player.Id })">Details</a></td>
            </tr>
        }

    </tbody>
</table>