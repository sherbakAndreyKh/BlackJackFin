@model BlackJack.ViewModels.IndexHistoryView

@{
    ViewBag.Title = "Index";
}

<h3>All Player's history</h3>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Player Name</th>
            <th>Amount Games</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var a in Model.Players)
         {
            <tr>
                <td>@a.Name</td>
                <td>@a.GameAmount</td>
                <td>@Html.ActionLink("Details", "GetGamesByPlayerId", new { playerId = a.Id})</td>
            </tr>
         }

    </tbody>
</table>