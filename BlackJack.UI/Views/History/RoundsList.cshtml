@model BlackJack.ViewModels.RoundListHistoryView

@{
    ViewBag.Title = "RoundsList";
}

<h2>All Rounds</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Round Number</th>
            <th>Winner Name</th>
            <th>Winner Score</th>
        </tr>
    </thead>
    <tbody data-myPath="@Url.Action("DetailRound", "History")">

        @foreach (var a in Model.Rounds)
         {
            <tr class="testButton" data-param="@a.Id" >
                <td>@a.RoundNumber</td>
                <td>@a.Winner</td>
                <td>@a.WinnerScore</td>
                <td>Show More  &#9660;</td>
            </tr>
         }

    </tbody>
</table>

<div class="render container">
</div>
<script src="~/Scripts/RoundDetailsScript.js"></script>