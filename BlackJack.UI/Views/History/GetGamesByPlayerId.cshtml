@model BlackJack.ViewModels.GameListHistoryView

@{
    ViewBag.Title = "GameList";
}

<h3>All Games "@Model.Player.Name"</h3>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Game Number</th>
            <th>Amount Round</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Number</td>
                <td>@game.RoundsAmount</td>
                <td>@Html.ActionLink("Details", "GetRoundsByGameId", new { gameId = game.Id})</td>
            </tr>
        }

    </tbody>
</table>