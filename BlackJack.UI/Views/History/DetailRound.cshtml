@model BlackJack.ViewModels.DetailsRoundHistoryView

@{
    Layout = null;
}

@foreach (var player in Model.Players)
{
    <div class="col-md-6 BorderInDetails">
        <div class="text-center">
            <h4>@player.Name</h4>
            @foreach(var prop in player.Properties)
            {
                <p>Score: @prop.Score</p>
                <p>
                    @foreach (var card in prop.Hand)
                    {
                        <span>@card.Name </span>
                        <span>@card.Suit </span>
                    }
                </p>
            }
        </div>
    </div>
}
