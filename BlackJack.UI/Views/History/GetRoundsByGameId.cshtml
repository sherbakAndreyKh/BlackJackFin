@model BlackJack.ViewModels.RoundListHistoryView

@{
    ViewBag.Title = "RoundsList";
}

<h2>All Rounds</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Round Number</th>
            <th>Winner Name</th>
            <th>Winner Score</th>
        </tr>
    </thead>
    <tbody data-myPath="@Url.Action("GetRoundsDetailsByRoundId", "History")">

        @foreach (var round in Model.Rounds)
        {
            <tr class="testButton" data-param="@round.Id" >
                <td>@round.RoundNumber</td>
                <td>@round.Winner</td>
                <td>@round.WinnerScore</td>
                <td>Show More  &#9660;</td>
            </tr>
         }

    </tbody>
</table>

<div class="render container">
</div>
<script src="~/Scripts/RoundDetailsScript.js"></script>